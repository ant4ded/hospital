<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <!--Servlets declaration start-->
  <servlet>
    <servlet-name>Main</servlet-name>
    <jsp-file>/jsp/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  <!--Servlets declaration end-->

  <!--JSP declaration start-->
  <servlet>
    <servlet-name>Registry</servlet-name>
    <jsp-file>/jsp/registry.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registry</servlet-name>
    <url-pattern>/registry</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserCredentials</servlet-name>
    <jsp-file>/jsp/userCredentials.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserCredentials</servlet-name>
    <url-pattern>/user-credentials</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RoleControl</servlet-name>
    <jsp-file>/jsp/roleControl.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>RoleControl</servlet-name>
    <url-pattern>/role-control</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DepartmentControl</servlet-name>
    <jsp-file>/jsp/departmentControl.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>DepartmentControl</servlet-name>
    <url-pattern>/department-control</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DiagnoseDisease</servlet-name>
    <jsp-file>/jsp/diagnoseDisease.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>DiagnoseDisease</servlet-name>
    <url-pattern>/diagnose-disease</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Error</servlet-name>
    <jsp-file>/jsp/error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Error</servlet-name>
    <url-pattern>/error-handler</url-pattern>
  </servlet-mapping>
  <!--JSP declaration end-->

  <!--Error codes declaration start-->
  <error-page>
    <error-code>401</error-code>
    <location>/error-handler</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error-handler</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error-handler</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error-handler</location>
  </error-page>
  <!--Error codes declaration end-->

  <!--Filters declaration start-->
  <!--Authentication filters declaration start-->
  <filter>
    <filter-name>ReceptionistAuthenticationFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.AuthenticationFilter</filter-class>
    <init-param>
      <param-name>role</param-name>
      <param-value>RECEPTIONIST</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>ReceptionistAuthenticationFilter</filter-name>
    <url-pattern>/registry</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ReceptionistAuthenticationFilter</filter-name>
    <url-pattern>/c-register-client</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.AuthenticationFilter</filter-class>
    <init-param>
      <param-name>role</param-name>
      <param-value>ADMIN_HEAD</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/role-control</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/department-control</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/c-change-department-head</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/c-find-department-control-attributes</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/c-find-role-control-attributes</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/c-move-doctor-to-department</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminHeadAuthenticationFilter</filter-name>
    <url-pattern>/c-role-control</url-pattern>
  </filter-mapping>
  <!--Authentication filters declaration end-->
  <!--Validation filters declaration start-->
  <filter>
    <filter-name>RegisterClientFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.receptionist.RegisterClientFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RegisterClientFilter</filter-name>
    <url-pattern>/c-register-client</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>RoleControlFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.admin.head.RoleControlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RoleControlFilter</filter-name>
    <url-pattern>/c-role-control</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>CorrectDepartmentFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.admin.head.CorrectDepartmentFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CorrectDepartmentFilter</filter-name>
    <url-pattern>/c-move-doctor-to-department</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CorrectDepartmentFilter</filter-name>
    <url-pattern>/c-change-department-head</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>CorrectLoginFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.CorrectLoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CorrectLoginFilter</filter-name>
    <url-pattern>/c-find-role-control-attributes</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CorrectLoginFilter</filter-name>
    <url-pattern>/c-find-department-control-attributes</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CorrectLoginFilter</filter-name>
    <url-pattern>/c-move-doctor-to-department</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CorrectLoginFilter</filter-name>
    <url-pattern>/c-change-department-head</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>PassportDetailsFilter</filter-name>
    <filter-class>by.epam.hospital.controller.filter.PassportDetailsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PassportDetailsFilter</filter-name>
    <url-pattern>/c-diagnose-disease</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PassportDetailsFilter</filter-name>
    <url-pattern>/c-register-client</url-pattern>
  </filter-mapping>
  <!--Validation filters declaration end-->
  <!--Filters declaration end-->
  <listener>
    <listener-class>by.epam.hospital.connection.listener.ConnectionPoolContextListener</listener-class>
  </listener>
</web-app>
